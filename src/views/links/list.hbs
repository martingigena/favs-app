<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center text-white  bg-dark">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">
                            {{description}}
                        </p>
                        <p>
                            {{timeago created_at}}
                        </p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger">
                            Delete
                        </a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">
                            Edit
                        </a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-5 mx-auto">
                <div class="card card-body text-center">
                    <p>
                        There are not links saved yet
                    </p>
                    <a href="/links/add" class="btn btn-success">
                        Create One
                    </a>
                </div>
            </div>
        {{/each}}
    </div>
</div>